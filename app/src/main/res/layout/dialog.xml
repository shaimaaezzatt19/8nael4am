<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
  android:layout_height="match_parent">

 <RelativeLayout
     android:id="@+id/Main_RL"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/album_dp_20"
        android:layout_height="@dimen/album_dp_200">


     <ImageView
         android:layout_width="match_parent"
         android:layout_height="@dimen/album_dp_200"
         android:src="@drawable/dialog1" />


    </RelativeLayout>
    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Dialod_RateNow_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/Dialog"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_text_25"
            tools:layout_editor_absoluteX="47dp"
            tools:layout_editor_absoluteY="46dp" />

        <RatingBar
            android:id="@+id/PutYourStars_Rate"
            android:layout_width="287dp"
            android:layout_height="63dp"
            android:layout_marginTop="128dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="47dp" />
    </android.support.constraint.ConstraintLayout>

</RelativeLayout>